<h2>Admin selection</h2>
  <div class="col-md-8">
  <h3>Total Users: <%= @users.count %> | Total Boards: <%= @boards.count %> | Total Images: <%= @images.count %></h3>
    <% @users.each do |user| %>
      <p>Users email: <a href="mailto:<%= user.email %>"><%= user.email %></a>
      <%= link_to "Delete User", admin_user_delete_admins_path(:user_id => user.id), class: 'deleteUser', method: :delete, data: { confirm: 'Are you sure you wish to delete this user?' } %></p> 
      <ul>
        <% @boards.each do |board| %>
          <% if board.user_id == user.id %>
            <li><%= board.name %>: <span style="color:green;font-size:18px;"><%=board.images.count %></span><span style="margin-left:25px;"><%= link_to 'Check It Out', "boards/#{board.id}" %></span></li>
          <% end %>  
        <% end %>
        </ul>
        <hr>
    <% end %>  
  </div>